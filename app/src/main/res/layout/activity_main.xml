<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/main_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toTopOf="@+id/discover_nav_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </FrameLayout>
    <TextView
        android:id="@+id/message"
        android:layout_width="97dp"
        android:layout_height="30dp"
        android:text="@string/title_home"
        tools:layout_editor_absoluteX="79dp"
        tools:layout_editor_absoluteY="421dp" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/discover_nav_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="98dp"
        android:layout_height="43dp"
        android:text="@string/login_register"
        tools:layout_editor_absoluteX="156dp"
        tools:layout_editor_absoluteY="344dp" />

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="96dp"
        android:layout_marginTop="68dp"
        android:ems="10"
        android:hint="@string/username_hint"
        android:inputType="textPersonName"
        android:text="@string/default_username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvUserName" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="96dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="@string/password_hint"
        android:inputType="textPassword"
        android:text="@string/default_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etUsername" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="83dp"
        android:layout_height="31dp"
        android:text="未登录"
        tools:layout_editor_absoluteX="249dp"
        tools:layout_editor_absoluteY="102dp" />

    <TextView
        android:id="@+id/tvMoney"
        android:layout_width="62dp"
        android:layout_height="27dp"
        android:text="0"
        tools:layout_editor_absoluteX="270dp"
        tools:layout_editor_absoluteY="424dp" />

    <ImageView
        android:id="@+id/ivAvatar"
        android:layout_width="104dp"
        android:layout_height="103dp"
        tools:layout_editor_absoluteX="79dp"
        tools:layout_editor_absoluteY="66dp"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/btnGetComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="136dp"
        android:text="获取评论(测试用)"
        app:layout_constraintStart_toEndOf="@+id/btnAddComment"
        app:layout_constraintTop_toTopOf="@+id/btnAddComment" />

    <Button
        android:id="@+id/btnAddComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="68dp"
        android:text="@string/add_comment"
        app:layout_constraintStart_toStartOf="@+id/etComment"
        app:layout_constraintTop_toTopOf="@+id/etComment" />

    <EditText
        android:id="@+id/etComment"
        android:layout_width="214dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:hint="@string/comment_hint"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="474dp" />

    <Button
        android:id="@+id/btnRecharge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="16dp"
        android:text="@string/recharge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAddComment" />

</android.support.constraint.ConstraintLayout>